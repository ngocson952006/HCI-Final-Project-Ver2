<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/navigation_header_background" />

            <TextView
                android:id="@+id/textview_information_switcher"
                style="@android:style/TextAppearance.Material.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/preview_image"
                android:layout_alignEnd="@id/preview_image"
                android:layout_alignStart="@id/preview_image"
                android:layout_alignTop="@id/preview_image"
                android:gravity="end|bottom"
                android:paddingBottom="4dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="@string/sample_preview_information"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <RatingBar
            android:id="@+id/ratingbar"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:numStars="5"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:rating="1.0"
            android:stepSize="1.0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="4dp"
            android:paddingStart="4dp">

            <TextView
                android:id="@+id/textview_address"
                style="@android:style/TextAppearance.Material.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textview_price"
                android:layout_below="@+id/textview_price"
                android:text="@string/sample_address" />

            <ImageView
                android:id="@+id/imageview_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_more_vert_black_24dp" />

            <TextView
                android:id="@+id/textview_price"
                style="@android:style/TextAppearance.Material.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:text="@string/sample_price"
                android:textColor="@color/text_black_87" />

            <TextView
                android:id="@+id/textview_cardview_agent_name"
                style="@android:style/TextAppearance.Material.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/imageview_more"
                android:text="@string/project_name"
                android:textAlignment="textStart"
                android:textColor="@color/colorAccent" />


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
