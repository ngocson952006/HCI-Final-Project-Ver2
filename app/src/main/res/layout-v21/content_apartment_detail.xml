<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tns.realestate.ApartmentDetailActivity"
    tools:showIn="@layout/activity_apartment_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/detail_ratingbar"
                style="@android:style/Widget.Material.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="1.0"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/textview_detail_price"
                style="@android:style/TextAppearance.Material.Display1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/sample_price"
                android:textColor="@color/text_black_87" />

            <TextView
                android:id="@+id/textview_detail_address"
                style="@android:style/TextAppearance.Material.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_address"
                android:textColor="@color/text_black_87" />

            <LinearLayout
                android:id="@+id/linear_layout_detail_params"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_detail_floor"
                    style="@android:style/TextAppearance.Material.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Lầu : 3"
                    android:textColor="@color/text_black_87" />

                <TextView
                    android:id="@+id/textview_detail_number_of_bedrooms"
                    style="@android:style/TextAppearance.Material.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_local_hotel_black_24dp"
                    android:gravity="fill"
                    android:text="2"
                    android:textColor="@color/text_black_87" />

                <TextView
                    android:id="@+id/textview_detail_number_of_bathrooms"
                    style="@android:style/TextAppearance.Material.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/man_sitting_in_the_bathroom"
                    android:gravity="fill"
                    android:text="2"
                    android:textColor="@color/text_black_87" />

                <TextView
                    android:id="@+id/textview_detail_area"
                    style="@android:style/TextAppearance.Material.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Diện tích : 50m2"
                    android:textColor="@color/text_black_87" />

            </LinearLayout>

            <Button
                android:id="@+id/button_detail_google_maps"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_on_map" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/horizotal_sepator" />


        <TextView
            android:id="@+id/textview_description_header"
            style="@android:style/TextAppearance.Material.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decription_header" />

        <TextView
            android:id="@+id/textview_detail_description"
            style="@android:style/TextAppearance.Material.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_description"
            android:textAlignment="inherit" />


        <TextView
            android:id="@+id/textview_agent_contact_header"
            style="@android:style/TextAppearance.Material.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agent_header" />

        <TextView
            android:id="@+id/textview_agent_name"
            style="@android:style/TextAppearance.Material.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/metro_tower"
            android:textColor="@color/text_black_87" />

        <TextView
            android:id="@+id/textview_agent_address"
            style="@android:style/TextAppearance.Material.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/metro_tower_address" />

        <TextView
            android:id="@+id/textview_agent_phone"
            style="@android:style/TextAppearance.Material.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/metro_tower_phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/horizotal_sepator" />
        <!-- Begin neighbourhood information -->
        <TextView
            android:id="@+id/textview_neighbourhood_information_header"
            style="@android:style/TextAppearance.Material.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_local_grocery_store_black_24dp"
            android:text="@string/_neighbourhood_information_header" />

        <TextView
            android:id="@+id/textview_neighbourhood_information"
            style="@android:style/TextAppearance.Material.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/metro_tower_phone" />

        <!-- End neighbourhood information-->


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/horizotal_sepator" />
        <!-- Begin nearby school information -->
        <TextView
            android:id="@+id/textview_nearby_school_information_header"
            style="@android:style/TextAppearance.Material.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_domain_black_24dp"
            android:text="@string/nearby_school_information_header" />

        <TextView
            android:id="@+id/textview_nearby_school_information"
            style="@android:style/TextAppearance.Material.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/metro_tower_phone" />
        <!-- End nearby school information -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/horizotal_sepator" />

        <TextView
            style="@android:style/TextAppearance.Material.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_header" />
        <!-- User name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/input_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉa email"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Đăng ký" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>